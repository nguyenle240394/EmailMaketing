@page
@model EmailMaketing.Web.Pages.SenderEmails.CreateModalModel
@using Microsoft.Extensions.Localization
@using EmailMaketing.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<EmailMaketingResource> L
@{
    Layout = null;
}
@section scripts{
    <abp-script src="/Pages/EmailManagement/SenderEmails/CreateModal.js" />
}

<abp-card>
    <form method="post" asp-page="/EmailManagement/SenderEmails/CreateModal">
        <abp-modal>
            <abp-modal-header>@L["New Sender Email"].Value</abp-modal-header>
            <abp-modal-body>
                <div>
                    <label>Email<sup>*</sup></label>
                        <input id="emailinput" name="emailinput" type="text" class="form-control" asp-for="SenderEmail.Email" required/>
                </div>
                <div>
                    <label>Password<sup>*</sup></label>
                        <input id="passwordinput" name="passwordinput" type="text" class="form-control" asp-for="SenderEmail.Email" required/>
                </div>
                <div style="text-align:right;">
                    <abp-button id="checkemailbtn" type="button" button-type="Primary">Test sender email</abp-button>
                </div>
            </abp-modal-body>
            <abp-modal-footer buttons="@(AbpModalButtons.Cancel| AbpModalButtons.Save)"></abp-modal-footer>
        </abp-modal>
    </form>
</abp-card>