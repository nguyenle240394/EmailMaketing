@page
@model EmailMaketing.Web.Pages.SenderEmails.CreateModalModel
@using Microsoft.Extensions.Localization
@using EmailMaketing.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<EmailMaketingResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="SenderEmail" asp-page="/EmailManagement/SenderEmails/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["New Sender Email"].Value">
        </abp-modal-header>
        <abp-modal-body>
            <abp-row>
                <label>Email<sup>*</sup></label>
                <abp-button-group>
                    <input type="text" name="emailInput" required />
                    <abp-button button-type="Primary" type="button">Test</abp-button>
                </abp-button-group>
            </abp-row>
            <abp-row>
                <label>Password<sup>*</sup></label>
                <abp-button-group>
                    <input type="text" name="passwordInput" required />
                    <abp-button button-type="Primary" type="button">Test</abp-button>
                </abp-button-group>
            </abp-row>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>