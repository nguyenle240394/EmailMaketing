@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using EmailMaketing.Localization
@using EmailMaketing.Permissions
@using Volo.Abp.Users
@model EmailMaketing.Web.Pages.SenderEmails.IndexModel
@inject IHtmlLocalizer<EmailMaketingResource> L
@inject ICurrentUser CurrentUser
@section scripts{
    <script type="text/javascript" src="~/Pages/SenderEmails/Index.js"></script>
} 

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Sender Email"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewProductButton"
                            text="@L["New Sender Email"].Value"
                            icon="plus"
                            button-type="Primary"
                            onclick="location.href='@Url.Action("CreateModal","SenderEmails")'"/>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-column style="float: right">
            <abp-input  id="Search" name="Search" placeholder="@L["Search"]" class="form-control" onkeyup="search()" />
        </abp-column>
        <abp-table striped-rows="true" id="SenderEmailTable"></abp-table>
    </abp-card-body>
</abp-card>